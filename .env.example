
# ==============================================================================
# Crypto Surf Game Environment Configuration
# ==============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit sensitive credentials to version control

# ==============================================================================
# Application Configuration
# ==============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Crypto Surf Game"
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================================================
# Database Configuration
# ==============================================================================
# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://cryptosurf:gamepass@localhost:5432/crypto_surf_dev
POSTGRES_USER=cryptosurf
POSTGRES_PASSWORD=gamepass
POSTGRES_DB=crypto_surf_dev

# MongoDB (Market Data & Analytics)
MONGODB_URL=mongodb://cryptosurf:mongopass@localhost:27017/crypto_surf_market?authSource=admin
MONGO_INITDB_ROOT_USERNAME=cryptosurf
MONGO_INITDB_ROOT_PASSWORD=mongopass

# Redis (Caching & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redispass

# ==============================================================================
# API Keys - Cryptocurrency Data Providers
# ==============================================================================
# Binance API (for real-time market data)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_API_URL=https://api.binance.com

# Coinbase API
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_API_URL=https://api.coinbase.com/v2

# CoinGecko API (fallback data source)
COINGECKO_API_KEY=your_coingecko_api_key_here
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Alpha Vantage (additional market data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# ==============================================================================
# Blockchain Configuration
# ==============================================================================
# Somnia Network
NEXT_PUBLIC_SOMNIA_CHAIN_ID=TBD
NEXT_PUBLIC_SOMNIA_RPC_URL=https://rpc.somnia.network
SOMNIA_PRIVATE_KEY=your_somnia_private_key_here

# Ethereum Mainnet
NEXT_PUBLIC_ETHEREUM_CHAIN_ID=1
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here

# Polygon
NEXT_PUBLIC_POLYGON_CHAIN_ID=137
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_PRIVATE_KEY=your_polygon_private_key_here

# Testnet Configuration (for development)
NEXT_PUBLIC_TESTNET_CHAIN_ID=5
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
TESTNET_PRIVATE_KEY=your_testnet_private_key_here

# ==============================================================================
# Smart Contract Addresses
# ==============================================================================
# These will be populated after contract deployment
NEXT_PUBLIC_SURF_TOKEN_ADDRESS=0x...
NEXT_PUBLIC_SURFBOARD_NFT_ADDRESS=0x...
NEXT_PUBLIC_GAME_CONTROLLER_ADDRESS=0x...
NEXT_PUBLIC_MARKETPLACE_ADDRESS=0x...

# ==============================================================================
# Web3 & Wallet Configuration
# ==============================================================================
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key
NEXT_PUBLIC_INFURA_PROJECT_ID=your_infura_project_id

# ==============================================================================
# IPFS Configuration (for NFT metadata)
# ==============================================================================
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt_token

# ==============================================================================
# Authentication & Security
# ==============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_next_auth_secret_here
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Session configuration
SESSION_MAX_AGE=86400  # 24 hours in seconds
REFRESH_TOKEN_EXPIRY=604800  # 7 days in seconds

# ==============================================================================
# External Services
# ==============================================================================
# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@cryptosurf.game

# File Upload & Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=crypto-surf-assets

# CDN Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# ==============================================================================
# Monitoring & Analytics
# ==============================================================================
# Application Performance Monitoring
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn_here

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
DATADOG_API_KEY=your_datadog_api_key

# ==============================================================================
# Game Configuration
# ==============================================================================
# Game mechanics
NEXT_PUBLIC_GAME_FPS=60
NEXT_PUBLIC_WAVE_UPDATE_INTERVAL=30000  # 30 seconds
NEXT_PUBLIC_PREDICTION_TIME_LIMIT=30    # seconds
NEXT_PUBLIC_SESSION_TIMEOUT=1800        # 30 minutes

# Scoring system
BASE_PREDICTION_POINTS=100
MAX_CONFIDENCE_MULTIPLIER=3.0
STREAK_BONUS_PERCENTAGE=10
VOLATILITY_BONUS_CAP=50

# NFT Configuration
DEFAULT_NFT_RARITY_DISTRIBUTION=60,25,12,2.8,0.2  # common,uncommon,rare,epic,legendary
MAX_SURFBOARD_SUPPLY=10000
MINT_PRICE_ETH=0.05

# ==============================================================================
# Development & Testing
# ==============================================================================
# Test database (for running tests)
TEST_DATABASE_URL=postgresql://cryptosurf:gamepass@localhost:5432/crypto_surf_test

# Development flags
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
NEXT_PUBLIC_SHOW_DEBUG_INFO=true
ENABLE_MOCK_DATA=true
SKIP_AUTH_IN_DEV=false

# Performance testing
LIGHTHOUSE_CI_TOKEN=your_lighthouse_ci_token
LOAD_TEST_CONCURRENT_USERS=100

# ==============================================================================
# Deployment Configuration
# ==============================================================================
# Production deployment
DEPLOY_ENVIRONMENT=development  # development, staging, production
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=crypto-surf-game

# Kubernetes
KUBE_CONFIG_PATH=~/.kube/config
KUBERNETES_NAMESPACE=crypto-surf-dev

# CI/CD
GITHUB_TOKEN=your_github_token
GITHUB_ACTIONS_SLACK_WEBHOOK=your_slack_webhook_url

# ==============================================================================
# Rate Limiting & Security
# ==============================================================================
# API Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000  # 1 minute

# Security headers
CSP_REPORT_URI=https://cryptosurf.report-uri.com/r/d/csp/enforce
HSTS_MAX_AGE=31536000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://cryptosurf.game
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# ==============================================================================
# Cache Configuration
# ==============================================================================
# Redis Cache TTL (Time To Live) in seconds
CACHE_MARKET_DATA_TTL=30      # 30 seconds for real-time data
CACHE_USER_PROFILE_TTL=3600   # 1 hour for user profiles
CACHE_GAME_ASSETS_TTL=86400   # 24 hours for game assets
CACHE_LEADERBOARD_TTL=300     # 5 minutes for leaderboards

# ==============================================================================
# Logging Configuration
# ==============================================================================
LOG_LEVEL=info  # error, warn, info, verbose, debug
LOG_FORMAT=json  # json, simple
LOG_FILE_PATH=logs/app.log
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5

# ==============================================================================
# Game Balance & Mechanics
# ==============================================================================
# Wave generation parameters
WAVE_HEIGHT_MULTIPLIER=1.5
WAVE_SMOOTHING_FACTOR=0.3
MIN_WAVE_HEIGHT=10
MAX_WAVE_HEIGHT=200

# Scoring mechanics
PERFECT_RIDE_BONUS=50
TRICK_MULTIPLIER_BASE=1.2
COMBO_DECAY_RATE=0.95
MAX_COMBO_MULTIPLIER=5.0

# Energy system
MAX_ENERGY=100
ENERGY_REGEN_RATE=1  # per second
TRICK_ENERGY_COST=10
WIPEOUT_ENERGY_PENALTY=30

# ==============================================================================
# NFT & Blockchain Game Mechanics
# ==============================================================================
# Surfboard attributes
BOARD_SPEED_MIN=0.8
BOARD_SPEED_MAX=1.5
BOARD_STABILITY_MIN=0.5
BOARD_STABILITY_MAX=1.2
BOARD_TRICK_BONUS_MIN=1.0
BOARD_TRICK_BONUS_MAX=2.0

# Token economics
DAILY_SURF_TOKEN_REWARD=10
WEEKLY_TOURNAMENT_PRIZE_POOL=1000
STAKING_APY_PERCENTAGE=12
LIQUIDITY_MINING_REWARDS=5000  # per month

# ==============================================================================
# Mobile & PWA Configuration
# ==============================================================================
# Progressive Web App
NEXT_PUBLIC_PWA_NAME="Crypto Surf"
NEXT_PUBLIC_PWA_SHORT_NAME="CryptoSurf"
NEXT_PUBLIC_PWA_THEME_COLOR="#00D4FF"
NEXT_PUBLIC_PWA_BACKGROUND_COLOR="#000014"

# Mobile responsiveness
MOBILE_BREAKPOINT=768
TABLET_BREAKPOINT=1024
DESKTOP_BREAKPOINT=1200

# Touch controls
TOUCH_SENSITIVITY=1.0
SWIPE_THRESHOLD=50  # pixels
DOUBLE_TAP_DELAY=300  # milliseconds

# ==============================================================================
# END OF CONFIGURATION
# ==============================================================================
