
{
  "name": "crypto-surf-game",
  "version": "0.1.0",
  "description": "A revolutionary 2D pixel-art crypto-surfing game where waves follow real-time candlestick charts",
  "private": true,
  "author": {
    "name": "Crypto Surf Game Team",
    "email": "team@cryptosurf.game",
    "url": "https://cryptosurf.game"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/crypto-surf-game.git"
  },
  "homepage": "https://cryptosurf.game",
  "keywords": [
    "crypto",
    "gaming",
    "blockchain",
    "nft",
    "surfing",
    "pixel-art",
    "education",
    "trading"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:production": "NODE_ENV=production next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:report": "eslint . --ext .js,.jsx,.ts,.tsx --format json --output-file eslint-report.json",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:game": "jest --testPathPattern=game",
    "test:performance": "jest --testPathPattern=performance",
    "test:smoke": "playwright test --grep smoke",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:production": "NODE_ENV=production jest --testPathPattern=production",
    "test:smoke:production": "playwright test --grep smoke --config=playwright.prod.config.ts",
    "test:performance:production": "lighthouse --output json --output-path lighthouse-report.json",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "audit:report": "npm audit --json > audit-report.json",
    "security:check": "snyk test",
    "security:monitor": "snyk monitor",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:seed:prod": "NODE_ENV=production prisma db seed",
    "db:reset": "prisma migrate reset",
    "db:backup": "node scripts/backup-db.js",
    "db:validate": "prisma validate",
    "generate": "prisma generate",
    "postinstall": "prisma generate",
    "build:assets": "node scripts/build-assets.js",
    "optimize:sprites": "node scripts/optimize-sprites.js",
    "optimize:assets": "node scripts/optimize-assets.js",
    "docker:build": "docker build -t crypto-surf:local .",
    "docker:run": "docker run -p 3000:3000 crypto-surf:local",
    "docker:compose": "docker-compose up -d",
    "docker:compose:build": "docker-compose up --build -d",
    "docker:down": "docker-compose down",
    "monitoring:check-deployment": "node scripts/check-deployment-health.js",
    "license-check": "license-checker --json > license-report.json"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^14.0.0",
    "@prisma/client": "^5.5.0",
    "@reduxjs/toolkit": "^1.9.7",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "ethers": "^6.8.0",
    "framer-motion": "^10.16.0",
    "next": "^14.0.0",
    "next-pwa": "^5.6.0",
    "phaser": "^3.70.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "redis": "^4.6.10",
    "socket.io-client": "^4.7.2",
    "styled-components": "^6.1.0",
    "typescript": "^5.2.0",
    "web3": "^4.2.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@next/eslint-config-next": "^14.0.0",
    "@playwright/test": "^1.38.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.5",
    "@types/ws": "^8.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-accessibility": "^5.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.3",
    "prisma": "^5.5.0",
    "snyk": "^1.1244.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test-setup.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@/components/(.*)$": "<rootDir>/src/components/$1",
      "^@/utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@/types/(.*)$": "<rootDir>/src/types/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{ts,tsx}",
      "!src/test-setup.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}


